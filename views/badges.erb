<div class="subPart">
    <h2>Available badges</h2>
    <div class="container-fluid">
        <div class="row badges">
            <% for badge in badges %>
                <div class="col-sm-12 col-md-6 col-lg-4" style="min-height: 124px;">
                    <div class="card" style="height:100%;">
                        <div class="card-header">
                            <div class="card-title h6"><%=badge.title%></div>
                        </div>
                        <div class="card-image" style="text-align: center">
                            <div class="avatar avatar-l py-3">
                                <img src="img/badges/<%=badge.short%>.png" alt="<%=badge.short%>">
                            </div>
                        </div>
                        <div class="card-body">
                            <%=badge.description%>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
